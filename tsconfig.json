{
  "compilerOptions": {
      "target": "ES2016",
      "module": "commonJS",
      "lib": [
          "ES2016"
      ],
      "baseUrl": "./",
      "outDir": "./dist",
      "declaration": true,
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "resolveJsonModule": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": false,
      "inlineSourceMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "typeRoots": [
          "./node_modules/@types",
          "@types"
      ]
  },
  "ts-node": {
    "files": true
  },
  "exclude": [
      "node_modules",
      "tests",
      "dist"
  ],
}
